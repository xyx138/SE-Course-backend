{
    "mcpServers": {
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch", "--ignore-robots-txt"]
        },
        "filesystem": {
            "command": "npx",
            "args": [
              
              "-y",
              "@modelcontextprotocol/server-filesystem",
              "${PROJECT_PATH}"
            
            ]
        },
        "UML-MCP-Server": {
            "command": "uv",
            "args": [
                "--directory",
                "${PROJECT_PATH}/tools/uml-mcp-server",
                "run",
                "uml_mcp_server.py"
            ]
        }
    }
}